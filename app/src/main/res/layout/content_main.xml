<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.a2287517l.mydrawerattempt.MainActivity"
    tools:showIn="@layout/app_bar_main">

        <EditText
            android:id="@+id/addTextList"
            android:layout_width="320dp"
            android:inputType="textPersonName"
            android:hint="Add an item to list"
            android:ems="10"
            android:background="#FFFFFF"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:id="@+id/addTaskBtn"
            android:layout_height="38dp"
            app:srcCompat="@android:drawable/ic_input_add"
            android:elevation="0dp"
            android:layout_width="38dp"
            android:layout_toRightOf="@+id/addTextList"/>

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is where the main menu will go" />
</RelativeLayout>
